{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "lib": ["dom", "dom.iterable", "esnext"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "typeRoots": ["node_modules/@types"],
        "jsx": "react-jsx"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modues"]
}
